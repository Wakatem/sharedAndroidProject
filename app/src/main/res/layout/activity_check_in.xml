<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Students.CheckInActivity">

    <TextView
        android:id="@+id/activity_check_in_textView_student_name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="224dp" />

    <TextView
        android:id="@+id/activity_check_in_textView_student_id_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_check_in_textView_student_name_1"
        android:layout_marginTop="14dp" />

    <EditText
        android:id="@+id/activity_check_in_editText_amount_of_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_check_in_textView_student_id_1"
        android:layout_marginTop="28dp"/>

    <Button
        android:id="@+id/activity_check_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check-In"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_check_in_editText_amount_of_hours"
        android:layout_marginTop="28dp" />

</androidx.constraintlayout.widget.ConstraintLayout>