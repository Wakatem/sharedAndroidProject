<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Add New Transaction"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/transactionIDQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Transaction ID:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/transactionIDA"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/senderaccQ"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transactionIDQ"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="21dp"
            android:text="Sender Account:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/senderIDA"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:layout_below="@id/transactionIDA"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/senderNameA"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/senderIDA"
            android:hint="Name"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/recipientQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/senderaccQ"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="71dp"
            android:text="Recipient Account:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/recipientIDA"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/senderNameA"
            android:hint="ID"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/recipientNameA"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipientIDA"
            android:hint="Name"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/amountQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipientQ"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="57dp"
            android:text="Amount"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/amountA"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@id/recipientNameA"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/dateQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amountQ"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="20dp"
            android:text="Date"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dateA"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amountA"
            android:layout_alignParentRight="true"
            android:inputType="date"
            android:textSize="15sp"
            android:hint="dd/mm/yyyy"/>

        <TextView
            android:id="@+id/paymenttypeQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateQ"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="19dp"
            android:text="Payment Method"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/paymentMethodA"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateA"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
             />


        <TextView
            android:id="@+id/typeQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymenttypeQ"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="15dp"
            android:text="Transaction Type"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/typeA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paymentMethodA"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="9dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/income"
                android:layout_width="105dp"
                android:layout_height="28dp"
                android:layout_marginLeft="60dp"
                android:text="Income"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/expense"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Expense"
                android:textSize="18sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/expensetypeQ"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/typeQ"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="19dp"
            android:text="Expense Type"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Spinner
            android:id="@+id/expenseTypeA"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/typeA"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/expensetypeQ"
            android:textAlignment="center"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/saveTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="Save"
            android:layout_below="@+id/expenseTypeA"/>

        <Button
            android:id="@+id/cancelTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:layout_toRightOf="@+id/saveTransaction"
            android:text="Cancel"
            android:layout_below="@+id/expenseTypeA"/>
    </RelativeLayout>



</LinearLayout>