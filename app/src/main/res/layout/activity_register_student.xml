<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.HomeSection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_includer"
            layout="@layout/custom_toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Students.RegisterStudentActivity"
            android:background="#F0F8FF">

            <TextView
                android:id="@+id/activity_register_student_textView_student_details_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="28dp"
                android:text="Student Details"
                android:textColor="@color/black"
                android:textSize="20sp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_register_student_textView_student_full_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_textView_student_details_1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_register_student_textView_student_dob_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_textView_student_full_name_1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Date of Birth"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activity_register_student_textView_student_gender_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_textView_student_dob_1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="Gender"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activity_register_student_textView_guardian_details_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_textView_student_gender_1"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="10dp"
                android:text="Guardian Details"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_register_student_textView_guardian_full_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_textView_guardian_details_1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_register_student_textView_guardian_relationship_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_textView_guardian_full_name_1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Relationship" />

            <TextView
                android:id="@+id/activity_register_student_textView_guardian_phone_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_textView_guardian_relationship_1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Phone Number" />

            <TextView
                android:id="@+id/activity_register_student_textView_guardian_email_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_textView_guardian_phone_number_1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Email" />

            <TextView
                android:id="@+id/activity_register_student_textView_guardian_account_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_textView_guardian_email_1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Account Number" />

            <EditText
                android:id="@+id/activity_register_student_editText_student_last_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_textView_student_details_1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="20dp"
                android:ems="8"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/activity_register_student_editText_student_first_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_textView_student_details_1"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/activity_register_student_editText_student_last_name_1"
                android:ems="8"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/activity_register_student_editText_student_dob_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_editText_student_first_name_1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:hint="dd/mm/yyyy"
                android:inputType="date"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/activity_register_student_editText_student_gender_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_editText_student_dob_1"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:text="Male"
                    android:id="@+id/male"
                    android:textSize="16dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/female"
                    android:textSize="16dp" />

            </RadioGroup>

            <EditText
                android:id="@+id/activity_register_student_editText_guardian_last_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_textView_guardian_details_1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="14dp"
                android:layout_marginRight="20dp"
                android:ems="8"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/activity_register_student_editText_guardian_first_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_textView_guardian_details_1"
                android:layout_marginTop="14dp"
                android:layout_marginRight="5dp"
                android:layout_toStartOf="@+id/activity_register_student_editText_guardian_last_name_1"
                android:ems="8"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/activity_register_student_editText_guardian_relation_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_editText_guardian_last_name_1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/activity_register_student_editText_guardian_phone_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_editText_guardian_relation_1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="(XXX) XXX-XXXX"
                android:inputType="phone"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/activity_register_student_editText_guardian_email_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_editText_guardian_phone_number_1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/activity_register_student_editText_guardian_account_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_register_student_editText_guardian_email_1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="eg 676543"
                android:inputType="numberSigned"
                android:maxLength="6"
                android:textSize="16sp" />

            <Button
                android:id="@+id/activity_register_student_button_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_register_student_editText_guardian_account_name_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:textColor="@color/black"
                android:backgroundTint="#f4dafe"
                android:text="Register" />

        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clipToPadding="false"
        app:headerLayout="@layout/header_layout"
        app:menu="@menu/main_menu" />

</androidx.drawerlayout.widget.DrawerLayout>