<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/borderdeets"
            >

            <ImageView
                android:id="@+id/closedown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:src="@drawable/ic_baseline_close_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount Type"
            android:layout_alignParentLeft="true"
            android:id="@+id/discountType"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:id="@+id/discountName"
                android:fontFamily="@font/raleway_regular"
                android:layout_margin="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/discountType"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/percentage"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:textSize="50sp"
                android:padding="20dp"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="20dp"/>


            <Switch
                android:id="@+id/aswitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/discountName"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:checked="true"
                android:showText="false"
                android:textOff="Inactive"
                android:textOn="Active"
                android:textSize="25sp"
                android:scaleX="1.25"
                android:scaleY="1.25"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>








</LinearLayout>